{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "baseUrl": "./server",
        "paths": {
            "~controllers/*": ["controllers/*"],
            "~models/*": ["models/*"],
            "~routes": ["routes"],
            "~routes/*": ["routes/*"],
            "~types": ["types"],
            "~types/*": ["types/*"],
            "~utils": ["utils"],
            "~utils/*": ["utils/*"]
        },
        "allowJs": true,
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "include": ["server"]
}
